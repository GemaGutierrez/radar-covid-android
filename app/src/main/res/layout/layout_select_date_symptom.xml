<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_select_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:importantForAccessibility="yes"
        android:orientation="vertical">

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TitleXSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/exposure_date_day"
            android:textSize="16sp" />

        <es.gob.radarcovid.common.view.LabelTextView
            android:id="@+id/button_day"
            style="@style/TitleXSmall"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/shape_rounded_border_accent"
            android:gravity="center"
            android:hint="@string/exposure_hint_day_month"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="25"
        android:importantForAccessibility="yes"
        android:orientation="vertical">

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TitleXSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/exposure_date_month"
            android:textSize="16sp" />

        <es.gob.radarcovid.common.view.LabelTextView
            android:id="@+id/button_month"
            style="@style/TitleXSmall"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/shape_rounded_border_accent"
            android:gravity="center"
            android:hint="@string/exposure_hint_day_month"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:importantForAccessibility="yes"
        android:orientation="vertical">

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TitleXSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/exposure_date_year"
            android:textSize="16sp" />

        <es.gob.radarcovid.common.view.LabelTextView
            android:id="@+id/button_year"
            style="@style/TitleXSmall"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/shape_rounded_border_accent"
            android:gravity="center"
            android:hint="@string/exposure_hint_year"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>